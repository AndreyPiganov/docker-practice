{
  "root": true,
  "parser": "@babel/eslint-parser",
  "plugins": ["react", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "document": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    // Дополнительные правила линтера
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
